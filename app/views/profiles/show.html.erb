<h1>プロフィール</h1>

<div class="field">
  <%= User.human_attribute_name(:postal_code) %>:
  <%= @user.postal_code %>
</div>

<div class="field">
  <%= User.human_attribute_name(:address) %>:
  <%= @user.address %>
</div>
<div class="field">
